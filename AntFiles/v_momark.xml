<?xml version="1.0" encoding="UTF-8"?>
<project name="Android_Pipeline">

	<import file="common.xml" />
	
	<!-- Target Special Properties -->
	
	<!-- Name tag -->
	<property name="release.branch" value="momark" />
	<!-- AndroidManifest file path, use different fold to distinct
		because the name must be exact "AndroidManifest.xml", -->
	<property name="release.manifest" 
		value="ManifestFiles/Momark/AndroidManifest.xml" />
	<!-- resource fold -->
	<property name="release.res" value="Resource/Momark" />
	<!-- Coinfig Setting -->
	<property name="config.logging" 
		value="true"/>
	<property name="config.testmode" 
		value="false"/>
	<property name="config.offer" 
		value="MOMARK"/>
	<property name="config.ads.momark.appid"
		value="7318778c232acca4" />
	<property name="config.ads.momark.devid"
		value="29bd700c8be07b68" />
		
	<!-- Directory for the third party java libraries -->
	<!--  
	<property name="jar.libs.dir" value="libs" />
	<property name="jar.libs.absolute.dir" location="${jar.libs.dir}" />
	<path id="jar.libs.ref">
		<fileset dir="${jar.libs.absolute.dir}" includes="${ads.momark}" />
		<fileset dir="${jar.libs.absolute.dir}" includes="android_pipeline.jar" />
		<path refid="project.libraries.jars" />
	</path>
	-->
	
	<target name="copy_libs">
	    <delete verbose="true" includeemptydirs="true">
            <fileset dir="${jar.libs.real.path}">
                <include name="**/*"/>
            </fileset>
        </delete> 
        <copy file="${jar.libs.base.path}/${ads.momark}" 
			tofile="${jar.libs.real.path}/${ads.momark}"
		    overwrite="true" />
         <copy file="${jar.libs.base.path}/android_pipeline.jar" 
			tofile="${jar.libs.real.path}/android_pipeline.jar"
		    overwrite="true" />
	</target>  
	
	<import file="main.xml" />

</project>
